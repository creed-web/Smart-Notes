# Smart Notes Backend Environment Configuration
# Copy this file to .env and fill in your values

# REQUIRED: Hugging Face API Token
# Get your token from https://huggingface.co/settings/tokens
HUGGINGFACE_API_TOKEN=hf_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Optional: Model configuration
HUGGINGFACE_MODEL=google/flan-t5-small

# Optional: Text processing settings
MAX_CHUNK_SIZE=1000
MIN_SUMMARY_LENGTH=50
MAX_SUMMARY_LENGTH=300

# Optional: API settings
REQUEST_TIMEOUT=30
MAX_CONTENT_LENGTH=1000000

# Optional: Security
SECRET_KEY=your-secret-key-here

# Optional: CORS settings (comma-separated)
CORS_ORIGINS=*

# Optional: Logging
LOG_LEVEL=INFO
LOG_FILE=smart_notes.log
